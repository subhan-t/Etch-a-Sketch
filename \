let gridDimension = 100;

// let squareSize = Math.floor((1080 - 2 * gridDimension) / gridDimension);

// let squareCount = gridDimension * gridDimension;

for (let y = 0; y < gridDimension; y++) {
  const container = document.querySelector(".container");
  const column = document.createElement("div");
  column.classList.add("pixel-column");
  column.style.cssText = "display: flex;";
  container.appendChild(column);
}

const row = document.querySelectorAll(".pixel-column");
row.forEach((element) => {
  for (let x = 0; x < gridDimension; x++) {
    const square = document.createElement("div");
    square.classList.add("pixel");
    square.style.cssText = "border: 1px solid lightgrey;";
    row.appendChild(square);
  }
});
